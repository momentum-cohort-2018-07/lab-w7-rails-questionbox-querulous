<div class="right_side_wrapper">
    <div id="rs_module_1" class="rs_modules"><%# If logged in, User info here ? %>
      <div id="rsm1_header" class="rsm_header white_link">User info
      </div>
      <div id="rsm1_body" class="rsm_body">
<% if current_whiner %>
        <ul>
            <li>Whiner: <%= current_whiner.username %></li>
            <li>Name: <%= current_whiner.name %></li>
            <li>Email: <%= current_whiner.email %></li>
        </ul>
      </div>
    </div>
    <div id="rs_module_2" class="rs_modules"><%# current_whiner's most recent whines %>
      <div id="rsm2_header" class="rsm_header white_link">
      </div>
      <div id="rsm2_body" class="rsm_body">
      </div>
    </div>
    <div id="rs_module_3" class="rs_modules"><%# current_whiner's most recent answers %>
      <div id="rsm3_header" class="rsm_header white_link">
      </div>
      <div id="rsm3_body" class="rsm_body">
      </div>
    </div>
    <div id="rs_module_4" class="rs_modules"><%# ??? %>
      <div id="rsm4_header" class="rsm_header white_link">
      </div>
      <div id="rsm4_body" class="rsm_body">
      </div>
    </div>
<% else %>
        Please <%= link_to 'Log In', new_session_path, { :class=>"text-right text-white btn btn-secondary text-white"} %> to see your user info
      </div>
    </div>
<% end %>
  </div>
